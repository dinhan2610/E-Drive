}

.sortBarContainer {
  margin-bottom: 36px;
  padding-bottom: 28px;
  border-bottom: 2px solid #e9ecef;
}

.grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 24px;
  animation: fadeInUp 0.6s ease-out 0.2s both;
  margin: 32px 0 40px 0;
  padding: 0 16px;

  @media (max-width: 1200px) {
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 20px;
  }
  
  @media (max-width: 768px) {
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 16px;
    padding: 0 8px;
    margin: 24px 0 32px 0;
  }
  
  @media (max-width: 480px) {
    grid-template-columns: 1fr;
    gap: 16px;
    padding: 0;
    margin: 20px 0 24px 0;
  }
}.emptyState {
  grid-column: 1 / -1;
  text-align: center;
  padding: 80px 20px;
  
  .icon {
    font-size: 4rem;
    color: #ccc;
    margin-bottom: 24px;
  }
  
  h3 {
    font-size: 1.5rem;
    color: #666;
    margin-bottom: 12px;
  }
  
  p {
    color: #666;
    font-size: 1.2rem;
    font-weight: 400;
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto;
  }
}

.loading {
  grid-column: 1 / -1;
  text-align: center;
  padding: 100px 20px;
  
  .spinner {
    width: 50px;
    height: 50px;
    border: 5px solid rgba(0, 123, 255, 0.1);
    border-top: 5px solid #007bff;
    border-radius: 50%;
    animation: spin 1s linear infinite, pulse 2s ease-in-out infinite;
    margin: 0 auto 32px;
    box-shadow: 0 4px 16px rgba(0, 123, 255, 0.2);
  }
  
  p {
    font-size: 1.2rem;
    color: #666;
    font-weight: 500;
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
}

.paginationContainer {
  display: flex;
  justify-content: center;
  margin-top: 56px;
  animation: fadeIn 0.6s ease-out 0.8s both;
}

// Animations
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

// Additional Animations
@keyframes slideInLeft {
  from {
    opacity: 0;
    transform: translateX(-50px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}

// Responsive breakpoints
@media (max-width: 1200px) {
  .wrap {
    max-width: 1200px;
    padding: 110px 28px 36px 28px;
  }
  
  .header h1 {
    font-size: 3.6rem;
  }
  
  .grid {
    grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
    gap: 36px;
  }
  
  .layout {
    gap: 48px;
    grid-template-columns: 320px 1fr;
  }
  
  .content {
    padding: 44px;
  }
}

@media (max-width: 1024px) {
  .wrap {
    max-width: 950px;
    padding: 100px 24px 32px 24px;
  }
  
  .layout {
    grid-template-columns: 300px 1fr;
    gap: 40px;
  }
  
  .content {
    padding: 40px;
  }
  
  .grid {
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 32px;
  }
  
  .header {
    margin-bottom: 52px;
    padding: 48px 0;
    
    h1 {
      font-size: 3.2rem;
    }
  }
}

@media (max-width: 768px) {
  .wrap {
    max-width: 100%;
    padding: 90px 20px 28px 20px;
  }
  
  .layout {
    grid-template-columns: 1fr;
    gap: 56px;
  }
  
  .content {
    padding: 36px;
    margin-bottom: 36px;
  }
  
  .grid {
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 28px;
    margin-bottom: 52px;
  }
  
.sortBarContainer {
  margin-bottom: 0;
  animation: slideInDown 0.4s ease-out;
}  .header {
    margin-bottom: 48px;
    padding: 40px 0;
    
    h1 {
      font-size: 2.8rem;
    }
  }
}

@media (max-width: 640px) {
  .wrap {
    padding: 80px 16px 24px 16px;
  }
  
  .content {
    padding: 28px;
    border-radius: 20px;
  }
  
  .grid {
    grid-template-columns: 1fr;
    gap: 24px;
    margin-bottom: 44px;
  }
  
  .sortBarContainer {
    margin-bottom: 28px;
  }
  
  .header {
    margin-bottom: 40px;
    padding: 36px 0;
    
    h1 {
      font-size: 2.4rem;
    }
  }
  
  .layout {
    gap: 40px;
  }
}